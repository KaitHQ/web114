      <!--Week 5 Project- Working with a for loop and a while loop starts here -->
      <script> 

        let i = 1

        for(let i=1; i <= 5; i++) {
          let drink; //created a variable for drink type for ${}

        if (i === 3) { // if slot #3 is selected,
          drink = "Cola"; // then Cola is dispensed.

        } else if (i === 4) { // if slot #4 is selected,
          drink = "Super Drink"; // then the Super Drink is dispensed.

        } else if (i === 5) { // if slot #5 is selected,
          drink = "Orange Juice"; // then Orange Juice is dispensed.

        } else { // But if any other slot besides 3-5 is selected,
          drink = "Water"; // then water is dispensed.
        }

          console.log(`Loading slot number ${i} dispenses ${drink}.`); // Instead of console.logging two, I combined into one.
      }

      </script> 
      <!-- Week 5 Project script ends here. -->

